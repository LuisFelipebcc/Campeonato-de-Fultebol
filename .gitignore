		int vitorias[num];
		int derrotas[num];
		int empates[num];
		int saldo_gols[num];
	
		char nomes[num][50];
		printf("Digite o n√∫mero de times: ");    
		scanf("%d", &num);
		printf("=============================\n");
		fflush(stdin);
	
		for (int i = 0; i<num; i++){
			printf("");
			printf("Digite o nome do time %d: ",i+1);
			gets(nomes[i]); 
			printf("=============================\n"); 
		}
	
		for (int i = 0; i < num ; i++){
			for(int j = 1; j < num ; j ++){
				
				if((nomes[i] != nomes[j]) && (nomes[j] != nomes[i])){
					
					
			 		printf("%s X %s",nomes[i],nomes[j]);
